---
const LOGOS = [];
for (let i = 0; i <= 19; i++) {
  LOGOS.push({
    url: `/marcas-logos/Artboard 2 copy ${i}.webp`,
  });
}
---

<div class="sponsor-slider-container relative">
  <!-- <SponsorSliderBg class="sponsor-slider-bg" /> -->
  <h2 class="slider-title" data-section="sliders-container" data-value="title">
    COLABORACIONES E INVESTIGACIONES
  </h2>
  <div class="sponsors-container">
    {LOGOS.map((logo) => <img src={logo.url} class="grayscale-image" />)}
  </div>
</div>

<style>
  .sponsor-slider-container {
    width: 100%;
    height: 302px;
    padding-top: 43px;
    z-index: 0;
    transition: transform 0.1s; /* Transici√≥n suave para el efecto */
    perspective: 1000px; /* Perspectiva para un mejor efecto 3D */
  }

  .sponsor-slider-bg {
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
  }

  .slider-title {
    color: #2165ff;
    text-align: center;
    font-family: "ruberoid-semibold";
    font-size: 30px;
    font-style: normal;
    font-weight: 600;
    line-height: 50px; /* 250% */
    letter-spacing: 0.02px;
  }

  .sponsors-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    row-gap: 22px;
    column-gap: 18px;
    padding: 43px 18px;
  }

  img {
    height: 55px;
    filter: grayscale(100%);

    &:hover {
      filter: none;
    }
  }

  @media (max-width: 768px) {
    .sponsor-slider-container {
      height: 220px;
      padding-top: 25px;
    }

    .sponsor-slider-bg {
      display: none;
    }

    .slider-title {
      font-size: 14px;
      line-height: normal;
    }

    .sponsor-slider-bg {
      width: 100%;
    }

    .sponsors-container {
      margin-top: 20px;
      padding: 0 8px;
      gap: 10px 8px;
    }

    img {
      height: 28px;
    }
  }
</style>
