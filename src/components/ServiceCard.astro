---
const { services } = Astro.props;
---

<div
  class={`w-[30%] pb-96  card-container mx-auto border border-gray-200 rounded-lg shadow-xl relative text-white ${Astro.props.class}`}
>
  <button
    id="dropdownHoverButton"
    data-dropdown-toggle={services.title}
    data-dropdown-trigger="hover"
    data-dropdown-placement="bottom"
    class="text-white focus:outline-none w-full mb-2 text-2xl font-bold tracking-tight rounded-lg py-7 text-center"
    type="button"
    >{services.title}
    <span class="relative flex mx-auto">
      <svg
        class="animate-ping size-5 pt-1 inline-flex mx-auto"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 10 6"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="m1 1 4 4 4-4"></path>
      </svg>
      <svg
        class="size-5 pt-2 absolute inline-flex left-[47.7%]"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 10 6"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="m1 1 4 4 4-4"></path>
      </svg>
    </span>
  </button>

  <!-- Dropdown menu -->
  <div
    id={services.title}
    class={`px-5 pb-8 z-10 hidden w-full rounded-lg ${Astro.props.class}`}
  >
    <ul class="text-base text-white" aria-labelledby="dropdownHoverButton">
      <li>
        <a href="#" class="font-light opacity-90 leading-6"
          >{services.description}</a
        >
      </li>
    </ul>
  </div>

  <img
    class="rounded-b-lg w-full h-[75%] absolute left-0 bottom-0"
    src={services.url}
    alt=""
  />
</div>
