---
const CONTENT = [
  {
    text: "BIM Automation",
  },
  {
    text: "Structural Automation",
  },
  {
    text: "Parametric Design",
  },
  {
    text: "Virtual construction",
  },
  {
    text: "AI Implementation",
  },
];
---

<div
  class="slider pt-10 relative overflow-hidden flex font-bold text-xl text-nowrap"
>
  <div class="slider-slide flex">
    {CONTENT.map((content) => <p class="h-16 mx-12">{content.text}</p>)}
    {CONTENT.map((content) => <p class="h-16 mx-12">{content.text}</p>)}
    {CONTENT.map((content) => <p class="h-16 mx-12">{content.text}</p>)}
  </div>
</div>

<style>
  /*CSS para el slider*/

  .slider .slider-slide {
    animation: 80s slider infinite linear;
  }

  @keyframes slider {
    from {
      transform: translateX(-50%);
    }

    to {
      transform: translateX(0);
    }
  }
</style>
