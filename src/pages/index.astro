<script>
  //Dropdowns
  document.addEventListener("DOMContentLoaded", function () {
    const dropdownButton = document.getElementById(
      "input-display-services"
    ) as HTMLInputElement;
    const cardServices = document.querySelector(
      ".card-services"
    ) as HTMLDivElement;
    const caretUp = document.querySelector(".caret-up") as HTMLSpanElement;
    const caretDown = document.querySelector(".caret-down") as HTMLSpanElement;

    dropdownButton!.addEventListener("change", () => {
      if (dropdownButton.checked) {
        cardServices!.style.height = "auto";
        caretUp!.style.display = "inline";
        caretDown!.style.display = "none";
      } else {
        cardServices!.style.height = "315px";
        caretUp!.style.display = "none";
        caretDown!.style.display = "inline";
      }
    });
  });

  //Github animation for slider

  const carouselElement = document.querySelector(".collabs-bg") as HTMLElement;

  carouselElement.addEventListener("mousemove", (event: MouseEvent) => {
    const rect = carouselElement.getBoundingClientRect();
    const x = event.clientX - rect.left;
    const y = event.clientY - rect.top;

    // Calcular el ángulo de rotación basado en la posición del mouse
    const rotateX = (y / rect.height - 0.5) * 5; // Ángulo de rotación Y
    const rotateY = (x / rect.width - 0.5) * -3; // Ángulo de rotación X

    // Aplicar la transformación y sombra
    carouselElement.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
  });

  carouselElement.addEventListener("mouseleave", () => {
    // Restaurar la sombra y la transformación original al salir el mouse
    carouselElement.style.transform =
      "perspective(1000px) rotateX(0deg) rotateY(0deg)";
    carouselElement.style.boxShadow = "0 4px 8px rgba(0, 0, 0, 0.1)";
  });

  //Carousel
</script>
