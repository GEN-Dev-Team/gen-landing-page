            <p class="font-light text-xl">Contáctanos:</p>
            <a
              href="https://mail.google.com/mail/?view=cm&to=Coordinador@genplusdesign.com"
              target="_blank"
              class="font-bold">Coordinador@genplusdesign.com</a
            >
            <span>/</span>
            <span>995567873</span>
          </div>
        </div>
        <Form />
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  /* main {
    max-width: 1440px;
    margin-inline: auto;
    position: relative;
  } */

  .sticky-button-1 {
    position: fixed;
    top: 200px;
    right: 0;
    display: flex;
    flex-direction: column;
    gap: 25px;
    z-index: 10;
    cursor: pointer;
  }

  .sticky-button-2 {
    position: fixed;
    top: 300px;
    right: 0;
    display: flex;
    flex-direction: column;
    gap: 25px;
    z-index: 10;
  }

  .dropdown-container {
    width: 80px; /* Inicialmente solo muestra el icono */
    height: 80px;
    padding: 20px;
    display: flex;
    align-items: center;
    border-radius: 10px 0px 0px 10px;
    background: #2165ff;
    box-shadow: 0px 0px 9px 0px rgba(255, 255, 255, 0.78) inset;
    color: #fff;
    font-family: "plusjakartasans-semibold";
    font-size: 20px;
    font-weight: 600;
    line-height: 28px;
    letter-spacing: 0.1px;
    transition:
      width 0.3s ease,
      padding-left 0.3s ease; /* Transición para la animación */
    overflow: hidden;
  }

  .dropdown-container img {
    opacity: 0;
    height: 68px;
    margin-left: auto;
  }

  .dropdown-text {
    opacity: 0;
  }

  .dropdown-container:hover {
    width: 254px;
    gap: 17px;

    img,
    .dropdown-text {
      opacity: 1;
      visibility: visible;
      text-align: center;
    }
  }

  .home-container {
    height: 614px;
    background: rgba(10, 36, 76, 0.8);
  }

  .home-content {
    width: 1440px;
    margin-inline: auto;
    height: 613px;
    padding: 125px 0px 18px 84px;
    position: relative;
    font-family: "ruberoid-semibold";
    color: white;
    /* background-image: url("/backgrounds/home-bg.mp4");
    background-size: 100% 100%; */
    display: flex;
    flex-direction: column;

    .home-video-container {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;

      .home-video {
        object-fit: cover;
      }
    }

    .home-background-degre {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
      background: rgba(10, 36, 76, 0.8);
    }

    .home-title {
      font-family: "ruberoid-light";
      font-size: 35px;
      font-style: normal;
      line-height: 55px; /* 157.143% */
      letter-spacing: 0.035px;
      z-index: 1;
    }

    .home-text {
      max-width: 789px;
      font-size: 45px;
      font-weight: 600;
      line-height: 55px; /* 122.222% */
      letter-spacing: 0.045px;
      text-wrap: pretty;
      z-index: 1;
    }

    .home-button {
      width: fit-content;
      display: inline-flex;
      padding: 12px 20px;
      margin-top: 20px;
      justify-content: center;
      align-items: center;
      gap: 10px;
      border-radius: 6px;
      background: var(--Azul-2, #2165ff);
      box-shadow:
        0px 4px 4px 0px rgba(0, 0, 0, 0.25),
        0px 0px 14.6px 0px rgba(255, 255, 255, 0.56) inset;
      z-index: 1;
    }
  }

  .about-container {
    width: 100%;
    padding: 45px 160px 0px;
    background-image: url("/backgrounds/about-bg.jpg");
    background-size: 100% 100%;

    p {
      display: flex;
      max-width: 1175px;
      max-height: 221px;
      margin-inline: auto;
      text-wrap: pretty;
      text-align: center;
      color: #0a244c;
      font-family: "Ruberoid-medium";
      font-size: 30px;
      font-style: normal;
      font-weight: 500;
      line-height: 45px; /* 150% */
      letter-spacing: 0.03px;
    }
  }

  .title {
    display: flex;
    justify-content: center;
    color: #2165ff;
    font-family: "Ruberoid-semibold";
    font-size: 20px;
    font-style: normal;
    font-weight: 600;
    line-height: 50px; /* 250% */
    letter-spacing: 0.02px;
  }

  .services-container {
    width: 100%;
    background-image: url("/backgrounds/service-bg.jpg");
    background-size: 100% 100%;
    background-repeat: no-repeat;

    .services-content {
      width: 1440px;
      padding: 45px 32px 58px;
      margin-inline: auto;

      .title {
        margin-top: 35px;
      }

      .card-services {
        width: 100%;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px 40px;
      }
    }
  }

  .sliders-container {
    width: 100%;
    padding-top: 48px;
    background-image: url("/backgrounds/sliders-bg.svg");
    background-size: cover;

    .slider-content {
      width: 1440px;
      margin-inline: auto;
    }

    .brochure-download {
      width: 804px;
      height: 59px;
      padding: 0px 10px 0 15px;
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      border-radius: 30px;
      margin-inline: auto;
      align-items: center;
      background: #fff;
      box-shadow: 0px 2px 13.5px 0px rgba(0, 0, 0, 0.25);

      span {
        color: #000;
        text-align: center;
        leading-trim: both;
        font-family: "ruberoid-regular";
        font-size: 20px;
        font-style: normal;
        font-weight: 450;
        line-height: 50px; /* 250% */
        letter-spacing: 0.02px;
      }

      img {
        width: 60px;
      }

      .download-button {
        width: 44px;
        height: 44px;
        position: relative;
      }
    }
  }

  .slider-container {
    width: 100%;
    background-image: url("/backgrounds/slider-bg.svg");
    background-size: 100% 200%;
    background-repeat: no-repeat;
  }

  .contact-container {
    width: 100%;
    background-image: url("/backgrounds/contact-bg.webp");
    background-size: cover;
  }

  .contact-content {
    width: 1440px;
    margin-inline: auto;
    display: flex;
    justify-content: space-between;
    padding: 52px 70px;
  }

  .contact-description {
    max-width: 645px;
    display: flex;
    flex-direction: column;

    .contact-title {
      margin-bottom: 48px;
      color: #0a244c;
      font-family: "ruberoid-medium";
      font-size: 45px;
      font-style: normal;
      font-weight: 500;
      line-height: 60px; /* 133.333% */
      letter-spacing: -2.25px;
    }

    .contact-text-media {
      display: none;
    }

    .contact-details {
      display: flex;
      flex-direction: row;
      align-items: center;
      gap: 0px 15px;
      margin-top: 20px;
      font-size: 20px;
    }
