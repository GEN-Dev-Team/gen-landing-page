          <span
            class="download-text"
            data-section="sliders-container"
            data-value="download-text"
            >Hola! quiero descargar el brochure de GEN+</span
          >
          <div class="download-button">
            <Send class="absolute top-0 max-sm:size-[21px]" />
            <Download
              class="absolute top-[25%] right-[15%] max-sm:size-[9px] max-sm:top-[23%] max-sm:right-[23.5%]"
            />
          </div>
        </a>
      </div>
    </section>

