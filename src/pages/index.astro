      <div class="services-content">
        <h1 class="title" data-section="services-container" data-value="title">
          NUESTROS SERVICIOS
        </h1>
        <div class="card-services">
          {
            SERVICES.map((service) => (
              <ServiceCard
                service={service}
                class={`carousel-item ${service.id === 2 || service.id === 5 || service.id === 8 ? "bg-skyblue" : "bg-black-blue"}`}
              />
            ))
          }
        </div>

        <!-- <ServicesSlider  services={SERVICES} /> -->
      </div>
      <div class="input-display-services">
        <input type="checkbox" id="input-display-services" />
