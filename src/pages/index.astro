      <div class="slider-content">
        <div class="slider-bg">
          <div class="text-logos-bg">
            <div class="slider-container">
              <SliderTexto />
              <div class="slider relative overflow-hidden flex">
                <div class="slider-track flex gap-x-10 max-md:gap-x-[15px]">
