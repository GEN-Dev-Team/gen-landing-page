  /*CSS para el slider*/
  .slider .slider-track {
    animation: 30s slide infinite linear;
  }

  @keyframes slide {
    from {
      transform: translateX(-50%);
    }

    to {
      transform: translateX(0);
    }
  }

  @media (max-width: 768px) {
    main {
      width: 100%;
    }

    .sticky-button-1 {
      top: 90px;
    }
    .sticky-button-2 {
      top: 140px;
    }

    .sticky-button-1,
    .sticky-button-2 {
      right: 0;
      gap: 5px;
    }

    .dropdown-container {
      width: 40px;
      height: 40px;
      padding: 13px 10px;
      border-radius: 4px 0 0 4px;
      font-size: 8px;
    }

    .dropdown-container:hover {
      width: 100px;
      gap: 5px;
      line-height: normal;
    }

    .home-content {
      height: 172px;
      padding: 25px 16px 10px;

      .home-title {
        font-size: 14px;
        line-height: normal;
      }

      .home-text {
        width: 256px;
        font-size: 18px;
        font-family: "ruberoid-medium";
        line-height: normal;
      }
      .home-button {
        width: 132px;
        height: 31px;
        margin-top: 16px;
        font-size: 12px;
      }
    }

    .about-container {
      padding: 15px 28px 0 37px;

      .title {
        font-size: 9px;
      }

      p {
        font-size: 12px;
        line-height: 17px;
      }
    }

    .services-content {
      padding: 30px 17px 17px;

      .title {
        margin-top: 0px;
        margin-bottom: 17px;
        font-size: 9px;
      }

      .card-services {
        gap: 15px;
      }
    }

    .sliders-container {
      padding-block: 20px;

      .brochure-download {
        width: 263px;
        height: 33px;
        margin-inline: auto;
        span {
          font-size: 8px;
          line-height: normal;
        }
        img {
          width: 28px;
        }

        .download-button {
          width: 21px;
          height: 21px;
        }
      }
    }

    .slider-container {
      margin-top: 20px;
      padding: 20px 4px;

      row-gap: 10px;
    }

    .contact-content {
      width: 100%;
      flex-direction: column;
      padding: 10px 27px;
      margin-top: 0px;
    }

    .contact-description {
      width: 100%;

      .contact-title {
        text-align: center;
        font-size: 14px;
        font-style: normal;
        font-weight: 500;
        line-height: 18px; /* 128.571% */
        letter-spacing: -0.7px;
        margin-bottom: 0px;
      }

      .contact-text {
        display: none;
      }

      .contact-text-media {
        margin-top: 3px;
        display: block;
        line-height: 15px; /* 125% */
        letter-spacing: 0.06px;
        text-align: center;
      }

      p {
        font-size: 12px;
      }

      .contact-details {
        display: flex;
        flex-wrap: wrap;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        gap: 0px 5px;
        margin-top: 7px;
        font-size: 12px;
      }
    }
  }
</style>
